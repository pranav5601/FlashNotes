<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="15dp"
    android:paddingBottom="15dp"
    tools:context=".fragments.FragDateTimePicker">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/spnPickTime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:padding="7dp"
                android:paddingStart="-1dp"
                android:paddingEnd="-1dp"
                android:text="Pick a time..."
                android:textColor="@color/txt_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgTimePickerDropDown"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:background="@drawable/drop_down_arrow_bg"
                android:clickable="true"
                android:contentDescription="@string/drop_down_arraow"
                android:focusable="true"
                android:src="@drawable/drop_down_arrow_black" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menu_icon_tint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/spnPickDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:padding="7dp"
                android:paddingStart="-1dp"
                android:paddingEnd="-1dp"
                android:text="Pick a date..."
                android:textColor="@color/txt_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgDatePickerDropDown"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:background="@drawable/drop_down_arrow_bg"
                android:clickable="true"
                android:contentDescription="@string/drop_down_arraow"
                android:focusable="true"
                android:src="@drawable/drop_down_arrow_black" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menu_icon_tint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="27dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="10dp"
        android:orientation="vertical"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/spnPickRepetition"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:padding="7dp"
                android:paddingStart="-1dp"
                android:paddingEnd="-1dp"
                android:text="Never repeate"
                android:textColor="@color/txt_color"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imgRepetitionPickerDropDown"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_gravity="center"
                android:layout_weight="0.1"
                android:background="@drawable/drop_down_arrow_bg"
                android:clickable="true"
                android:contentDescription="@string/drop_down_arraow"
                android:focusable="true"
                android:src="@drawable/drop_down_arrow_black" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/menu_icon_tint" />

    </LinearLayout>


    <Spinner
        android:id="@+id/spnTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@color/menu_icon_tint" />

    <Spinner
        android:id="@+id/spnDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="17dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@color/menu_icon_tint" />

    <Spinner
        android:id="@+id/spnRepetition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="17dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="17dp"
        android:layout_marginBottom="5dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="25dp"
        android:layout_marginEnd="25dp"
        android:background="@color/menu_icon_tint" />


</LinearLayout>